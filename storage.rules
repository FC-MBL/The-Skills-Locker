rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // SCORM Packages: Upload allowed for development (TODO: add auth)
    match /scorm-packages/{allPaths=**} {
      allow read, write: if true;
    }
    
    // SCORM Extracted Content: Read allowed for everyone (to ensure assets load)
    // In production, consider proxying via Hosting to enforce auth
    match /scorm-extracted/{allPaths=**} {
      allow read: if true;
      allow write: if false; // Only Cloud Function writes here
    }

    // Default rule
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}

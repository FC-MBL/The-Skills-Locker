{
    "storage": {
        "rules": "storage.rules"
    },
    "functions": [
        {
            "source": "firebase-functions",
            "codebase": "default",
            "ignore": [
                "node_modules",
                ".git",
                "firebase-debug.log",
                "firebase-debug.*.log",
                "*.local"
            ]
        },
        {
            "source": "functions-python",
            "codebase": "python-functions",
            "ignore": [
                "venv",
                ".git",
                "__pycache__"
            ],
            "runtime": "python311"
        }
    ],
    "hosting": {
        "public": "dist",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    }
}